<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_42"
    android:layout_marginBottom="@dimen/dp_20"
    android:background="@null">


    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignStart="@+id/text_task_name"
        android:layout_alignEnd="@+id/text_task_name"
        android:layout_alignLeft="@+id/text_task_name"
        android:layout_alignRight="@+id/text_task_name"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:layout_below="@+id/text_view"
        android:id="@+id/text_task_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:background="@android:color/white"
        android:textColor="@color/cardview_dark_background"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_below="@+id/text_task_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignStart="@+id/text_task_name"
        android:layout_alignEnd="@+id/text_task_name"
        android:layout_alignLeft="@+id/text_task_name"
        android:layout_alignRight="@+id/text_task_name"
        android:background="@android:color/darker_gray"/>

</RelativeLayout>